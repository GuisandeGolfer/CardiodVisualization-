{
    "html:p5": {
		"prefix": "p5",
		"body": [
			"<!DOCTYPE html>",
			"<html lang=\"en\">",
				"<head>",
    				"<meta charset=\"UTF-8\">",
    				"<meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">",
    				"<meta http-equiv=\"X-UA-Compatible\" content=\"ie=edge\">",
    				"<title>${1:title}</title>",
    					"<script src=\"https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.8.0/p5.min.js\"></script>",
			"<script src=\"https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.8.0/addons/p5.dom.min.js\"></script>",
			"<style>",
			"html,body {",
				"margin: 0;",
				"padding: 0",
				"}",
			"canvas {",
				"display: block;",
				"}",
			"</style>",
			"</head>",
			"<body>",
			"<script language=\"javascript\" type=\"text/javascript\" src=\"${2:js file}\"></script>",
			"</body>",
			"</html>"
		],
		"description": "creates a boilerplate for html the p5 scripts"
	}
}